<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_first"
        android:background="@color/C8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head"
            android:src="@drawable/login_account_icon"
            android:layout_margin="@dimen/dp10"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tv_name"
            android:textColor="@color/Y1"
            android:textSize="@dimen/T5"
            android:layout_gravity="center"
            android:text="王者农药"
            android:maxWidth="180dp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mid"
        android:background="@color/C8"
        android:layout_below="@+id/ll_first"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bigbang"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:textColor="@color/Y0"
            android:textSize="@dimen/T3"
            android:layout_marginLeft="@dimen/dp10"
            android:text="标题标题标题标题,震惊！"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_content"
            android:textColor="@color/Y8"
            android:textSize="@dimen/T5"
            android:layout_margin="@dimen/dp10"
            android:text="标题标题标题标题,震惊！每日人物，因为在综艺节目，表扬出色，因为在综艺节目，表扬出色"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/C8"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_zan"
            android:textColor="@color/Y8"
            android:textSize="@dimen/T5"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:text="579 赞 · "
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lun"
            android:textColor="@color/Y8"
            android:textSize="@dimen/T5"
            android:layout_marginRight="@dimen/dp10"
            android:text="28 评论"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>